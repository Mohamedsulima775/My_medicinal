# =============================================================================
# My Medicinal (Dawaii) - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=my_medicinal
DB_USER=root
DB_PASSWORD=your_database_password

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=my_medicinal
APP_TITLE=Dawaii
APP_ENV=development  # development, staging, production
DEBUG_MODE=1  # 1 for debug, 0 for production

# Site URL (used for CORS and redirects)
SITE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Secret key for encryption (generate using: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_generate_random_32_byte_hex

# CORS Allowed Origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:8000

# Rate Limiting
RATE_LIMIT_ENABLED=1  # 1 to enable, 0 to disable
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
RATE_LIMIT_WINDOW=60  # Time window in seconds

# Session Settings
SESSION_TIMEOUT=3600  # Session timeout in seconds (1 hour)
API_KEY_EXPIRY_DAYS=90  # API key expiration in days

# -----------------------------------------------------------------------------
# Firebase Cloud Messaging (FCM) - Push Notifications
# -----------------------------------------------------------------------------
FCM_ENABLED=1  # 1 to enable, 0 to disable
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_CREDENTIALS_PATH=./firebase_credentials.json

# Firebase Project Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_CLIENT_ID=your_client_id

# -----------------------------------------------------------------------------
# SMS Configuration (Twilio or Unifonic)
# -----------------------------------------------------------------------------
SMS_ENABLED=1  # 1 to enable, 0 to disable
SMS_PROVIDER=twilio  # twilio or unifonic

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Unifonic Configuration (if using Unifonic instead of Twilio)
UNIFONIC_APP_SID=your_unifonic_app_sid
UNIFONIC_SENDER_ID=your_sender_id

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
EMAIL_ENABLED=1  # 1 to enable, 0 to disable
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1  # 1 for TLS, 0 for SSL
EMAIL_USE_SSL=0
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@dawaii.com
EMAIL_FROM_NAME=Dawaii

# Email Branding
EMAIL_BRAND_LOGO=/assets/my_medicinal/images/email-logo.png
EMAIL_BRAND_COLOR=#2D6A4F

# -----------------------------------------------------------------------------
# Payment Gateway Configuration
# -----------------------------------------------------------------------------
PAYMENT_GATEWAY_ENABLED=1  # 1 to enable, 0 to disable
PAYMENT_GATEWAY_PROVIDER=stripe  # stripe, payfort, paytabs

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayFort Configuration (if using PayFort)
PAYFORT_MERCHANT_IDENTIFIER=your_merchant_id
PAYFORT_ACCESS_CODE=your_access_code
PAYFORT_SHA_REQUEST_PHRASE=your_sha_request_phrase
PAYFORT_SHA_RESPONSE_PHRASE=your_sha_response_phrase
PAYFORT_SANDBOX_MODE=1  # 1 for sandbox, 0 for production

# PayTabs Configuration (if using PayTabs)
PAYTABS_PROFILE_ID=your_profile_id
PAYTABS_SERVER_KEY=your_server_key
PAYTABS_REGION=ARE  # ARE, SAU, EGY, etc.

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# -----------------------------------------------------------------------------
# Cache Configuration (Redis)
# -----------------------------------------------------------------------------
REDIS_CACHE=redis://localhost:6379/0
REDIS_QUEUE=redis://localhost:6379/1
REDIS_SOCKETIO=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
# Sentry Error Tracking (optional)
SENTRY_ENABLED=0
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable request/response logging
API_LOGGING_ENABLED=1

# -----------------------------------------------------------------------------
# Background Tasks & Scheduler
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=1  # 1 to enable scheduled tasks, 0 to disable

# Medication Reminder Frequency (in minutes)
MEDICATION_REMINDER_FREQUENCY=5

# Notification Cleanup (days)
NOTIFICATION_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------
# Google Maps API (for address lookup)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Pharmacy Integration
PHARMACY_API_ENABLED=0
PHARMACY_API_URL=https://api.pharmacy.com
PHARMACY_API_KEY=your_pharmacy_api_key

# -----------------------------------------------------------------------------
# Development & Testing Settings
# -----------------------------------------------------------------------------
# Set to 1 for development, 0 for production
ALLOW_TESTS=1
ENABLE_PROFILING=0
MOCK_SMS=0  # Set to 1 to mock SMS in development
MOCK_EMAIL=0  # Set to 1 to mock email in development
MOCK_PAYMENT=0  # Set to 1 to mock payment in development

# Test User Credentials (for automated testing)
TEST_USER_MOBILE=0500000000
TEST_USER_PASSWORD=test_password_123

# -----------------------------------------------------------------------------
# Additional Settings
# -----------------------------------------------------------------------------
# Timezone
TIMEZONE=Asia/Riyadh

# Language
DEFAULT_LANGUAGE=ar  # ar for Arabic, en for English

# Currency
DEFAULT_CURRENCY=SAR  # SAR for Saudi Riyal

# Date Format
DATE_FORMAT=dd-mm-yyyy

# =============================================================================
# End of Configuration
# =============================================================================
