# =============================================================================
# Healthcare Provider Environment Configuration
# بيئة خاصة بمقدمي الرعاية الصحية
# =============================================================================
# This file contains environment variables specific to Healthcare Providers
# Copy this to .env.provider for your provider environment
# =============================================================================

# -----------------------------------------------------------------------------
# Provider Portal Settings
# إعدادات بوابة مقدم الرعاية الصحية
# -----------------------------------------------------------------------------
PROVIDER_PORTAL_ENABLED=1  # 1 to enable provider portal, 0 to disable
PROVIDER_PORTAL_URL=http://localhost:8000/provider
PROVIDER_DASHBOARD_REFRESH_INTERVAL=30  # Dashboard refresh interval in seconds

# -----------------------------------------------------------------------------
# Provider Authentication & Security
# المصادقة والأمان لمقدم الرعاية
# -----------------------------------------------------------------------------
# Provider session timeout (in seconds) - default 8 hours for providers
PROVIDER_SESSION_TIMEOUT=28800

# Require two-factor authentication for providers
PROVIDER_2FA_REQUIRED=1  # 1 to require, 0 to make optional

# Provider API rate limiting (higher limits for providers)
PROVIDER_RATE_LIMIT_MAX_REQUESTS=500  # Max requests per window
PROVIDER_RATE_LIMIT_WINDOW=60  # Time window in seconds

# IP whitelist for provider access (comma-separated, leave empty for all)
PROVIDER_IP_WHITELIST=

# Provider login audit logging
PROVIDER_LOGIN_AUDIT_ENABLED=1
PROVIDER_ACTIVITY_LOG_RETENTION_DAYS=180  # Keep provider activity logs for 6 months

# -----------------------------------------------------------------------------
# Consultation Settings
# إعدادات الاستشارة الطبية
# -----------------------------------------------------------------------------
# Auto-accept consultations (0 = manual acceptance, 1 = auto-accept)
PROVIDER_AUTO_ACCEPT_CONSULTATIONS=0

# Consultation timeout (in minutes)
CONSULTATION_TIMEOUT=30

# Allow video consultations
VIDEO_CONSULTATION_ENABLED=1
VIDEO_CONSULTATION_PROVIDER=zoom  # zoom, jitsi, agora

# Video consultation duration limit (in minutes)
VIDEO_CONSULTATION_MAX_DURATION=60

# Simultaneous consultations limit per provider
MAX_SIMULTANEOUS_CONSULTATIONS=5

# Consultation reminder notifications (minutes before scheduled time)
CONSULTATION_REMINDER_TIME=15

# -----------------------------------------------------------------------------
# Prescription Settings
# إعدادات الوصفات الطبية
# -----------------------------------------------------------------------------
# Digital signature required for prescriptions
PRESCRIPTION_DIGITAL_SIGNATURE_REQUIRED=1

# Prescription validity period (in days)
PRESCRIPTION_VALIDITY_DAYS=30

# Allow controlled substances prescription
CONTROLLED_SUBSTANCES_ALLOWED=0  # Set to 1 only for authorized providers

# Prescription audit trail
PRESCRIPTION_AUDIT_TRAIL_ENABLED=1

# Auto-send prescriptions to patient
AUTO_SEND_PRESCRIPTION_TO_PATIENT=1

# E-Prescription integration
E_PRESCRIPTION_ENABLED=0
E_PRESCRIPTION_API_URL=https://api.eprescription.gov.sa
E_PRESCRIPTION_API_KEY=your_eprescription_api_key

# -----------------------------------------------------------------------------
# Provider Schedule Settings
# إعدادات جدول مقدم الرعاية
# -----------------------------------------------------------------------------
# Allow providers to manage their own schedule
PROVIDER_SELF_SCHEDULE_ENABLED=1

# Minimum notice period for schedule changes (in hours)
SCHEDULE_CHANGE_NOTICE_HOURS=24

# Slot duration (in minutes)
DEFAULT_SLOT_DURATION=30

# Break time between consultations (in minutes)
BREAK_TIME_BETWEEN_CONSULTATIONS=5

# Working hours (24-hour format)
DEFAULT_WORKING_HOURS_START=09:00
DEFAULT_WORKING_HOURS_END=17:00

# Working days (0=Sunday, 1=Monday, etc.)
DEFAULT_WORKING_DAYS=0,1,2,3,4  # Sunday to Thursday (Saudi Arabia)

# Maximum advance booking (in days)
MAX_ADVANCE_BOOKING_DAYS=30

# -----------------------------------------------------------------------------
# Patient Management Settings
# إعدادات إدارة المرضى
# -----------------------------------------------------------------------------
# Allow providers to view full patient history
PROVIDER_VIEW_FULL_PATIENT_HISTORY=1

# Allow providers to export patient data
PROVIDER_EXPORT_PATIENT_DATA=0  # Restricted for privacy

# Patient search limit
PROVIDER_PATIENT_SEARCH_LIMIT=50

# Show patient contact information
SHOW_PATIENT_CONTACT_INFO=1

# Patient notes encryption
PATIENT_NOTES_ENCRYPTION_ENABLED=1

# -----------------------------------------------------------------------------
# Notifications for Providers
# الإشعارات لمقدمي الرعاية
# -----------------------------------------------------------------------------
# Provider notification channels
PROVIDER_NOTIFICATION_EMAIL=1
PROVIDER_NOTIFICATION_SMS=1
PROVIDER_NOTIFICATION_PUSH=1
PROVIDER_NOTIFICATION_IN_APP=1

# Notification types
NOTIFY_NEW_CONSULTATION_REQUEST=1
NOTIFY_CONSULTATION_CANCELLATION=1
NOTIFY_PATIENT_MESSAGE=1
NOTIFY_PRESCRIPTION_FILLED=0
NOTIFY_PATIENT_ADHERENCE_ALERT=1

# Notification delivery preferences
PROVIDER_URGENT_NOTIFICATION_CHANNELS=sms,push  # Comma-separated
PROVIDER_REGULAR_NOTIFICATION_CHANNELS=email,in_app

# Quiet hours (no notifications during these hours)
PROVIDER_QUIET_HOURS_ENABLED=1
PROVIDER_QUIET_HOURS_START=22:00
PROVIDER_QUIET_HOURS_END=08:00

# -----------------------------------------------------------------------------
# Dashboard & Analytics
# لوحة المعلومات والتحليلات
# -----------------------------------------------------------------------------
# Enable provider dashboard
PROVIDER_DASHBOARD_ENABLED=1

# Dashboard widgets
DASHBOARD_SHOW_TODAY_CONSULTATIONS=1
DASHBOARD_SHOW_PENDING_CONSULTATIONS=1
DASHBOARD_SHOW_PATIENT_COUNT=1
DASHBOARD_SHOW_REVENUE=1
DASHBOARD_SHOW_RATINGS=1
DASHBOARD_SHOW_ADHERENCE_STATS=1

# Analytics and reports
PROVIDER_ANALYTICS_ENABLED=1
PROVIDER_REPORTS_ENABLED=1

# Export formats allowed
PROVIDER_EXPORT_FORMATS=pdf,excel,csv

# Report retention (in days)
PROVIDER_REPORT_RETENTION_DAYS=365

# -----------------------------------------------------------------------------
# Revenue & Billing (if applicable)
# الإيرادات والفوترة
# -----------------------------------------------------------------------------
# Enable billing for providers
PROVIDER_BILLING_ENABLED=0

# Payment split (percentage to provider)
PROVIDER_PAYMENT_SPLIT=70  # 70% to provider, 30% to platform

# Minimum withdrawal amount
MIN_WITHDRAWAL_AMOUNT=1000  # SAR

# Payment schedule
PAYMENT_SCHEDULE=monthly  # weekly, biweekly, monthly

# Tax settings
APPLY_VAT=1
VAT_RATE=15  # 15% VAT in Saudi Arabia

# -----------------------------------------------------------------------------
# Specialties & Services
# التخصصات والخدمات
# -----------------------------------------------------------------------------
# Available specialties (comma-separated)
AVAILABLE_SPECIALTIES=General Practice,Cardiology,Dermatology,Pediatrics,Orthopedics,Neurology,Psychiatry,Ophthalmology,ENT,Gynecology,Urology,Internal Medicine

# Service types
SERVICE_TYPES=consultation,follow_up,prescription_renewal,medical_report

# Consultation fees (default, can be overridden per provider)
DEFAULT_CONSULTATION_FEE=200  # SAR
DEFAULT_FOLLOW_UP_FEE=100  # SAR
DEFAULT_PRESCRIPTION_RENEWAL_FEE=50  # SAR

# -----------------------------------------------------------------------------
# Compliance & Regulations
# الامتثال والأنظمة
# -----------------------------------------------------------------------------
# Saudi Ministry of Health Integration
MOH_INTEGRATION_ENABLED=0
MOH_FACILITY_CODE=your_facility_code
MOH_API_URL=https://api.moh.gov.sa
MOH_API_KEY=your_moh_api_key

# Saudi Food and Drug Authority (SFDA) Integration
SFDA_INTEGRATION_ENABLED=0
SFDA_LICENSE_VERIFICATION=1

# Saudi Commission for Health Specialties (SCFHS)
SCFHS_LICENSE_VERIFICATION=1
SCFHS_API_URL=https://api.scfhs.gov.sa
SCFHS_API_KEY=your_scfhs_api_key

# HIPAA Compliance (if applicable)
HIPAA_COMPLIANCE_MODE=1
AUDIT_ALL_PATIENT_DATA_ACCESS=1

# Data retention policies
PATIENT_DATA_RETENTION_YEARS=10
CONSULTATION_RECORD_RETENTION_YEARS=7

# -----------------------------------------------------------------------------
# Telemedicine Settings
# إعدادات الطب عن بعد
# -----------------------------------------------------------------------------
# Enable telemedicine
TELEMEDICINE_ENABLED=1

# Video consultation providers
VIDEO_PROVIDER=agora  # agora, zoom, jitsi, twilio
VIDEO_QUALITY=hd  # sd, hd, full_hd

# Agora.io Configuration (if using Agora)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Zoom Configuration (if using Zoom)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# Screen sharing allowed
ALLOW_SCREEN_SHARING=1

# Recording consultations (requires patient consent)
ALLOW_CONSULTATION_RECORDING=0
CONSULTATION_RECORDING_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Provider Mobile App Settings
# إعدادات تطبيق مقدم الرعاية على الموبايل
# -----------------------------------------------------------------------------
# Enable provider mobile app
PROVIDER_MOBILE_APP_ENABLED=1

# Mobile app features
MOBILE_APP_OFFLINE_MODE=1
MOBILE_APP_BIOMETRIC_LOGIN=1

# Push notifications for mobile
MOBILE_PUSH_PRIORITY=high  # low, normal, high

# -----------------------------------------------------------------------------
# AI & Automation Features
# ميزات الذكاء الاصطناعي والأتمتة
# -----------------------------------------------------------------------------
# AI-powered diagnosis assistance
AI_DIAGNOSIS_ASSISTANCE=0  # Experimental feature

# Auto-generate consultation summaries
AUTO_GENERATE_CONSULTATION_SUMMARY=0

# Drug interaction checking
DRUG_INTERACTION_CHECK_ENABLED=1
DRUG_INTERACTION_API_URL=https://api.drugbank.com
DRUG_INTERACTION_API_KEY=your_drugbank_api_key

# Medical coding assistance (ICD-10, CPT)
MEDICAL_CODING_ASSISTANCE=0

# -----------------------------------------------------------------------------
# Performance & Optimization
# الأداء والتحسين
# -----------------------------------------------------------------------------
# Cache provider data
CACHE_PROVIDER_DATA=1
PROVIDER_CACHE_TTL=3600  # seconds

# Lazy load patient history
LAZY_LOAD_PATIENT_HISTORY=1

# Pagination limits
PROVIDER_CONSULTATION_LIST_PAGE_SIZE=20
PROVIDER_PATIENT_LIST_PAGE_SIZE=30

# -----------------------------------------------------------------------------
# Development & Testing (Provider Environment)
# التطوير والاختبار
# -----------------------------------------------------------------------------
# Provider test mode
PROVIDER_TEST_MODE=0

# Mock video consultations in dev
MOCK_VIDEO_CONSULTATIONS=0

# Test provider credentials
TEST_PROVIDER_EMAIL=test.provider@dawaii.com
TEST_PROVIDER_LICENSE=TEST123456

# Enable provider API documentation
PROVIDER_API_DOCS_ENABLED=1
PROVIDER_API_DOCS_URL=/api/provider/docs

# -----------------------------------------------------------------------------
# Localization for Providers
# التوطين لمقدمي الرعاية
# -----------------------------------------------------------------------------
# Provider portal language
PROVIDER_PORTAL_LANGUAGE=ar  # ar, en

# Support both Arabic and English
PROVIDER_MULTILINGUAL_SUPPORT=1

# Right-to-left (RTL) support
PROVIDER_RTL_ENABLED=1

# Date format for providers
PROVIDER_DATE_FORMAT=dd/mm/yyyy

# Time format
PROVIDER_TIME_FORMAT=24  # 12 or 24

# =============================================================================
# End of Healthcare Provider Configuration
# =============================================================================
